{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Projeto",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                "-o",
                "output/programa.exe",
                "main.c",
                "produtos.c",
                "cadastro.c",
                "listarProdutos.c",
                "buscarPNome.c",
                "byPreco.c",
                "mediaProdutos.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
